@model IEnumerable<InventoryControl.Web.Models.Product>  
  
@{  
    ViewBag.Title = "GetAllProducts";  
}  
  
<h2>GetAllProducts</h2>  
  
<p>  
    @Html.ActionLink("Create New", "Create")  
</p>  
<table class="table">  
    <tr>  
        <th>  
            @Html.DisplayNameFor(model => model.Name)  
        </th>  
        <th>  
            @Html.DisplayNameFor(model => model.AvailableQuantity)  
        </th>  
        <th>  
            @Html.DisplayNameFor(model => model.ReorderLimit)  
        </th>  
        <th>  
            @Html.DisplayNameFor(model => model.Category.Name)  
        </th>
        <th></th>  
    </tr>  
  @if ( Model != null)
  {
    @foreach (var item in Model) {  
        @if(item != null)
        {
        <tr>  
            <td>  
                @Html.DisplayFor(modelItem => item.Name)  
            </td>  
            <td>  
                @Html.DisplayFor(modelItem => item.UnitPrice)  
            </td>  
            <td>  
                @Html.DisplayFor(modelItem => item.AvailableQuantity)  
            </td>  
            <td>  
                @Html.DisplayFor(modelItem => item.ReorderLimit)  
            </td>  
            <td>  
                @Html.ActionLink("Edit", "EditProduct", new { id = item.Id, name= item.Name, quantity=item.AvailableQuantity,reorderlevel=item.ReorderLimit, prod = item }) |  
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |  
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })  
            </td>  
        </tr>  
        }
    }  
  }

  
</table> 